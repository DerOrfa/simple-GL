export EMATH_DIR=$(HOME)/emath/

export MAKEFILE = Makefile.manual
export CXXFLAGS= -I$(EMATH_DIR) -Os $(shell sdl-config --cflags) -DDATA_DIR="\"$(HOME)/data\"" -DGL_GLEXT_PROTOTYPES
export CFLAGS=$(CXXFLAGS)

export LIBS = -L$(EMATH_DIR)
#-lIL -lILUT -lILU 
export LINK_LIBS = $(LIBS) -lm -lGL -lGLU -lEMath $(shell sdl-config --libs)

%:
	${MAKE} $@ -f Makefile.manual
